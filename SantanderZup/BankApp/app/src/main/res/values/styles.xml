<resources>

    <!-- Bank application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextBackground">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textColor">@color/white</item>
    </style>




    <style name="BankButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BankTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BankTextView.Header" parent="BankTextView">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="BankTextView.Title" parent="BankTextView">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BankTextViewValue" parent="@android:style/TextAppearance">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BankTextView.Small" parent="BankTextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BankTextView.Small.Gray" parent="BankTextView">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BankToolbar" parent="AppTheme">
        <item name="android:color">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
